<h1>
  List of all movies
</h1>

<hr>

<form action="/insert_movie_record" method="post">
  
  <div>
    <label for="name_field">Name</label>
    <input id="name_field" type="text" name="the_name">
  </div>

  <div>
    <label for="dob_field">Dob</label>
    <input id="dob_field" type="date" name="the_dob">
  </div> 

  <div>
    <label for="bio_field">Bio</label>
    <input id="bio_field" type="text" name="the_bio">
  </div> 
  
  <div>
    <label for="image_field">Image</label>
    <input id="image_field" type="text" name="the_image">
  </div>

  <button>Create director</button>

</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.order({:year => :desc, :title => :asc}).each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
